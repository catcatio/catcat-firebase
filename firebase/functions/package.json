{
  "name": "functions",
  "scripts": {
    "lint": "tslint -p tslint.json",
    "build": "tsc",
    "dev": "tsc -w",
    "serve": "npm run build && firebase serve --only functions",
    "serve:ci": "npm run build && firebase serve --token \"$FIREBASE_TOKEN\" -o 0.0.0.0 --only functions",
    "shell": "npm run build && firebase experimental:functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:asia": "gcloud beta functions deploy oz --trigger-http --region asia-northeast1",
    "logs": "firebase functions:log",
    "initToken": "mocha test/initToken.test.ts",
    "init": "npm i && nodemon --exec \"npm run serve:ci\""
  },
  "main": "lib/index.js",
  "dependencies": {
    "@line/bot-sdk": "^6.1.1",
    "@rabbotio/fetcher": "^1.1.1",
    "@rabbotio/noconsole": "^1.0.1",
    "claudia-bot-builder": "^4.2.0",
    "cors": "^2.8.4",
    "dayjs": "^1.7.5",
    "express": "^4.16.3",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.4",
    "ics": "^2.7.2",
    "imagemagick-stream": "^4.1.1",
    "line-pay": "^1.0.11",
    "mailgun-js": "^0.20.0",
    "moment": "^2.22.2",
    "pretty-hrtime": "^1.0.3",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "sanitize-filename": "^1.6.1",
    "stellar-sdk": "^0.9.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/stellar-sdk": "^0.8.4",
    "mocha": "^5.2.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  },
  "private": true
}
